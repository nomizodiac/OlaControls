<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="BottomNavigation">
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
    </style>

    <style name="scene_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF91BD5A</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>


    <style name="dev_checkox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/bg_grey</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="rooms_radioBtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/bg_grey</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
